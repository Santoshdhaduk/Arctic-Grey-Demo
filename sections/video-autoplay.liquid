      "label": "t:sections.rich-text.settings.content_alignment.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "video",
      "id": "self_hosted_video",
      "label":"t:sections.video.settings.video.label"
    },
    {
      "type": "select",
      "id": "image_height",
      "options": [
        {
          "value": "adapt",
