{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
<div class="page-width">
<div class="logo-list">
  <!-- Left Section -->
  <div class="logo-left">
    <div class="recommendation">{{ section.settings.recommendation_text }}</div>
    <div class="stars">
      {% for i in (1..section.settings.stars_count) %}
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M10.0008 15.217L4.12295 18.5072L5.43573 11.9002L0.490234 7.32683L7.17943 6.53371L10.0008 0.416992L12.8222 6.53371L19.5113 7.32683L14.5659 11.9002L15.8787 18.5072L10.0008 15.217Z" fill="#F5BD41"/>
        </svg>
      {% endfor %}
    </div>
    <div class="reviews">{{ section.settings.reviews_text }}</div>
  </div>
  <span class="separate-line"></span>
  <!-- Right Section (Logos) -->
  <div class="logo-right">
    <div class="logo-list">
      {% for block in section.blocks %}
        {% if block.settings.logo_image != blank %}
          <div class="logo-item">
            {{ block.settings.logo_image | image_url: width: 120 | image_tag }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
</div>
</div>
{% schema %}
{
  "name": "Logo List Section",
  "settings": [
    {
      "type": "text",
      "id": "recommendation_text",
      "label": "Recommendation Text",
      "default": "#1 Doctor Recommended"
    },
    {
      "type": "text",
      "id": "reviews_text",
      "label": "Reviews Text",
      "default": "12,000+ 5-star Reviews"
    },
    {
      "type": "range",
      "id": "stars_count",
      "label": "Number of Stars",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 5
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-2"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo List"
    }
  ]
}
{% endschema %}
